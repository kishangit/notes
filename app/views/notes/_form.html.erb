<%= form_with(model: note, local: true) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.label :tags %>
    <%= form.text_area :tags %>
  </div>

  <div class="actions">
    <%= form.submit 'Submit', :class => 'btn btn-success' %> |
    <%= link_to 'Back', notes_path, class: 'btn btn-info' %>
  </div>
<% end %>
