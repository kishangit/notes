<h1>Notes</h1>

<%= link_to 'New Note', new_note_path, class: 'btn btn-info' %>

<br />
<br />

<div>         
  <table class="table table-hover table-striped" style="border: 1px solid;">
    <thead class="bg-secondary">
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Tags</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% if @notes.present? %>
        <% @notes.each do |note| %>
          <tr>
            <td><%= note.title %></td>
            <td><%= note.body.truncate_words(7) %></td>
            <td>
              <% note.tags.split(",").each do |tag| %>
                <span class="badge badge-primary"><%= tag %></span>
              <% end %>
            </td>
            <td>
              <%= link_to 'Show', note, class: 'btn btn-info' %> &nbsp;
              <%= link_to 'Edit', edit_note_path(note), class: 'btn btn-info' %> &nbsp;
              <%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="4">There are not any notes.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
